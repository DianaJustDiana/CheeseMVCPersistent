@model CheeseMVC.ViewModels.ViewMenuViewModel

@{
    ViewBag.title = Model.Menu.Name;
}

<ul>
    @foreach
        (var cheeseMenu in Model.Items)
    {
        <li>@cheeseMenu.Cheese.Name</li>
    }
</ul>

@if (Model.Items.Count == 0)
{
    <p>No menu items yet</p>
}

<p><a asp-controller="Menu" asp-action="AddItem" id="@Model.Menu.ID">Add Menu Item</a></p>